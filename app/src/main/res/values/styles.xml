<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name = "AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar" >
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="MainScreen">
        <item name="android:background">@color/color_gray_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainScreen.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">@dimen/main_page_image_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/main_page_text_size</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <!-- Customer List -->
    <style name="customer_list_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_background</item>
    </style>>
    <style name="customer_list_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/cust_list_item_margin</item>
        <item name="android:fontFamily">@string/roboto_black</item>
        <item name="android:textSize">@dimen/cust_list_header_fontSize</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="customer_list_header_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/color_accent</item>
    </style>

    <style name="customer_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cust_list_item_height</item>vv
        <item name="android:background">@color/main_background</item>
    </style>>
    <style name="customer_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/cust_list_item_margin</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/cust_list_item_fontSize</item>
        <item name="android:textColor">@color/color_gray_dark</item>
    </style>
    <style name="customer_list_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="customer_list_icon">
        <item name="android:layout_width">@dimen/cust_list_item_icon</item>
        <item name="android:layout_height">@dimen/cust_list_item_icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="customer_list_icon.exclamation" parent="customer_list_icon">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/cust_list_item_margin</item>
        <item name="android:tint">@color/color_orange</item>
    </style>
    <style name="customer_list_icon.call" parent="customer_list_icon">
        <item name="android:layout_marginRight">@dimen/cust_list_item_margin</item>
        <item name="android:tint">@color/color_white</item>
        <item name="android:background">@color/color_green</item>
    </style>
    <style name="customer_list_icon.map" parent="customer_list_icon">
        <item name="android:layout_marginRight">@dimen/cust_list_item_margin</item>
        <item name="android:tint">@color/color_green</item>
    </style>

    <!-- Customer card info -->
    <style name="customer_info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>
    <style name="customer_info_header" parent="customer_info_text">
        <item name="android:textSize">@dimen/customer_info_header_fontSize</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>
    <style name="customer_info_item" parent="customer_info_text">
        <item name="android:textSize">@dimen/customer_info_data_fontSize</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="customer_info_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:layout_marginBottom">@dimen/customer_info_margin</item>
    </style>
    <style name="customer_info_icon">
        <item name="android:layout_width">@dimen/customer_info_icon</item>
        <item name="android:layout_height">@dimen/customer_info_icon</item>
    </style>

    <!-- Customer card notes -->
    <style name="customer_note_block">
        <item name="android:layout_margin">@dimen/customer_info_margin</item>
        <item name="android:padding">@dimen/customer_info_margin</item>
        <item name="android:background">@drawable/rounded_corners_shape</item>
    </style>
    <style name="customer_note_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="customer_note_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_gray_dark</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="customer_note_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Customer card orders -->
    <style name="customer_orders_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:layout_marginBottom">@dimen/customer_info_margin</item>
    </style>

    <!-- Customer card orders -->
    <style name="order_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:layout_marginBottom">@dimen/customer_info_margin</item>
    </style>

    <style name="login_input_text">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:hint">@string/user_name_hint</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="password_input_text">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:hint">@string/user_password_hint</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="login_server_select">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
        <!--item name="android:hint">@string/settings_server_address</item>
        <item name="android:textColorHint">@color/color_gray</item-->
        <item name="android:background">@drawable/server_spinner_background</item>
    </style>

    <style name="order_header_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/order_margin</item>
        <item name="android:layout_marginStart">@dimen/order_margin</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/order_header_text_size</item>

    </style>

    <style name="order_header_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/order_margin</item>
        <item name="android:layout_marginStart">@dimen/order_margin</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textSize">@dimen/order_header_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="order_header_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">0dp</item>
    </style>


    <!-- =============ROUTES=============== -->
    <style name="route_list_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_background</item>
    </style>>
    <style name="route_list_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/route_list_item_margin</item>
        <item name="android:fontFamily">@string/roboto_black</item>
        <item name="android:textSize">@dimen/route_list_header_fontSize</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="route_list_header_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/color_accent</item>
    </style>
    <style name="route_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/route_list_item_height</item>
        <item name="android:background">@color/main_background</item>
    </style>>
    <style name="route_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/route_list_item_margin</item>
        <item name="android:layout_marginRight">@dimen/route_list_item_margin</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/route_list_item_fontSize</item>
        <item name="android:textColor">@color/color_gray_dark</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="route_list_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="route_list_icon">
        <item name="android:layout_width">@dimen/route_list_item_icon</item>
        <item name="android:layout_height">@dimen/route_list_item_icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="route_list_icon.check_in" parent="route_list_icon">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/route_list_icon_margin</item>
        <item name="android:tint">@color/color_orange</item>
    </style>
    <style name="route_list_icon.call" parent="route_list_icon">
        <item name="android:layout_marginRight">@dimen/route_list_icon_margin</item>
        <item name="android:tint">@color/color_white</item>
        <item name="android:background">@color/color_green</item>
    </style>
    <style name="route_list_icon.map" parent="route_list_icon">
        <item name="android:layout_marginRight">@dimen/route_list_icon_margin</item>
        <item name="android:tint">@color/color_green</item>
    </style>

</resources>
