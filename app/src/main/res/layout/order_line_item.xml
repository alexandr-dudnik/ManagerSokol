<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/good_article_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        android:textColor="@color/color_gray"
        android:textSize="12sp"
        tools:text="23345" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/good_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/rectangle_shape"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        android:textColor="@color/color_gray"
        android:textSize="12sp"
        tools:text="Кабельный канал" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/good_request_price_image"
        android:background="@drawable/rectangle_shape"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:paddingHorizontal="2dp"
        android:paddingVertical="2dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_price_request_24"
        app:tint="@color/color_gray_light"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/good_price_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rectangle_shape"
        android:gravity="end"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        android:textColor="@color/color_gray"
        android:textSize="12sp"
        tools:text="50.25" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/good_quantity_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@drawable/rectangle_shape"
        android:gravity="end"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        android:textColor="@color/color_gray"
        android:textSize="12sp"
        tools:text="20" />


</LinearLayout>
