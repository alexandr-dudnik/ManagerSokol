<?xml version="1.0" encoding="utf-8"?>
<com.sokolua.manager.ui.screens.auth.AuthView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>


    <android.support.v7.widget.CardView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/login_form_margin"
        android:layout_marginRight="@dimen/login_form_margin"
        app:cardBackgroundColor="@color/login_background"
        app:cardCornerRadius="@dimen/login_form_corners"
        app:cardElevation="@dimen/login_form_elevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/login_form_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/roboto_medium"
                android:text="@string/login_form_caption"
                android:textAlignment="center"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_form_padding"
                android:layout_marginRight="@dimen/login_form_padding"
                >

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style = "@style/login_input_text"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_form_padding"
                android:layout_marginRight="@dimen/login_form_padding"
                android:layout_marginBottom="@dimen/login_form_padding"
                >

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style = "@style/password_input_text"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:layout_margin="@dimen/login_form_padding"
                android:text="@string/login_button_text"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/login_form"
        android:layout_gravity="top"
        android:layout_margin="@dimen/login_form_padding"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_logo_bird"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_form"
        android:layout_margin="@dimen/login_form_margin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_logo_text"/>

    </RelativeLayout>

</com.sokolua.manager.ui.screens.auth.AuthView>