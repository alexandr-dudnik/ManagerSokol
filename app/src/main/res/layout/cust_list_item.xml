<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cust_list_item_height"
    >

    <ImageView
        android:id="@+id/exclamation_img"
        android:layout_width="@dimen/cust_list_item_icon"
        android:layout_height="@dimen/cust_list_item_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/cust_list_item_margin"
        android:layout_marginStart="@dimen/cust_list_item_margin"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:tint="@color/color_orange"
        app:srcCompat="@drawable/ic_report_problem"
        />

    <ImageView
        android:id="@+id/call_img"
        android:layout_width="@dimen/cust_list_item_icon"
        android:layout_height="@dimen/cust_list_item_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/cust_list_item_margin"
        android:layout_marginStart="@dimen/cust_list_item_margin"
        android:layout_marginRight="@dimen/cust_list_item_margin"
        android:layout_marginEnd="@dimen/cust_list_item_margin"
        android:background="@color/color_green"
        android:scaleType="fitCenter"
        android:tint="@color/color_white"
        app:srcCompat="@drawable/ic_call"
        />

    <ImageView
        android:id="@+id/map_pin_img"
        android:layout_width="@dimen/cust_list_item_icon"
        android:layout_height="@dimen/cust_list_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/cust_list_item_margin"
        android:layout_marginStart="@dimen/cust_list_item_margin"
        android:layout_toLeftOf="@id/call_img"
        android:layout_toStartOf="@id/call_img"
        android:scaleType="fitCenter"
        android:tint="@color/color_green"
        app:srcCompat="@drawable/ic_person_pin"/>

    <TextView
        android:id="@+id/customer_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/cust_list_item_margin"
        android:layout_marginStart="@dimen/cust_list_item_margin"
        android:layout_toEndOf="@id/exclamation_img"
        android:layout_toLeftOf="@id/map_pin_img"
        android:layout_toRightOf="@id/exclamation_img"
        android:layout_toStartOf="@id/map_pin_img"
        android:fontFamily="@string/roboto_medium"
        android:textSize="@dimen/cust_list_item_fontSize"
        tools:text="Аверин ЧП"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/color_gray_light"
        />
</RelativeLayout>