<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/plan_value_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/customer_orders_margin"
        android:layout_marginStart="@dimen/customer_orders_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/roboto_medium"
        android:textSize="18sp"
        android:textColor="@color/color_gray"
        tools:text="100.00"/>
    <TextView
        android:id="@+id/plan_group_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/plan_value_text"
        android:layout_toStartOf="@id/plan_value_text"
        android:fontFamily="@string/roboto_medium"
        android:textSize="18sp"
        android:textColor="@color/color_gray"
        tools:text="Кабельный канал"
        />


</RelativeLayout>