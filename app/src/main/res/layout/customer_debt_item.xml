<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customer_debt_margin"
                android:layout_marginRight="@dimen/customer_debt_margin"
    >

    <TextView
        android:id="@+id/debt_value_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/customer_debt_margin"
        android:layout_marginRight="@dimen/customer_debt_margin"
        android:fontFamily="@string/roboto_regular"
        android:textColor="@color/color_gray"
        android:textSize="16sp"
        tools:text="100.00"
        />
    <TextView
        android:id="@+id/debt_value_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/debt_value_sum"
        android:layout_toStartOf="@id/debt_value_sum"
        android:layout_marginLeft="@dimen/customer_debt_margin"
        android:layout_marginStart="@dimen/customer_debt_margin"
        android:fontFamily="@string/roboto_regular"
        android:textColor="@color/color_gray"
        android:textSize="16sp"
        tools:text="USD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/debt_value_sum"
        android:background="@color/color_accent"
        />
</RelativeLayout>