<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/customer_debt_margin"
              android:layout_marginRight="@dimen/customer_debt_margin"
              android:background="@color/color_gray_tint"
              android:clickable="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/task_type_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:text="@string/customer_task_research"
        android:textSize="16sp"
        android:fontFamily="@string/roboto_medium"
        />
</LinearLayout>